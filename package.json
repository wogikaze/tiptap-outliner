{
    "name": "tiptap-outliner-monorepo",
    "private": true,
    "version": "0.0.0",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "dev": "npm --workspace apps/demo run dev",
        "build": "npm -ws run build",
        "test": "npm -ws run test",
        "lint": "eslint .",
        "format": "prettier --write .",
        "e2e": "npm --workspace apps/demo run e2e"
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "prettier": "^3.3.3",
        "@typescript-eslint/parser": "^7.18.0",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "eslint-plugin-react": "^7.34.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
